@model IEnumerable<MasterList.Models.MList>
@{
    ViewData["Title"] = "Master List Records";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Record
        </a>
    </div>

    <!-- Filter Card -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form id="filterForm">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label">Category</label>
                        <select class="form-select" id="categoryFilter">
                            <option value="">All Categories</option>
                            <option value="ELEM">Elementary</option>
                            <option value="SEC">Secondary</option>
                            <option value="NON-TEACHING">Non-Teaching</option>
                            <option value="SHS">Senior High</option>
                            <option value="DECEASED">Deceased</option>
                            <option value="RESIGNED">Resigned</option>
                            <option value="TRANSFERRED">Transferred</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Location Code</label>
                        <input type="text" class="form-control" id="locationFilter" placeholder="A1, A2, etc.">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Position</label>
                        <input type="text" class="form-control" id="positionFilter" placeholder="Filter by position">
                    </div>
                    <div class="col-md-3 d-flex align-items-end">
                        <button type="button" class="btn btn-secondary me-2" id="resetFilters">
                            <i class="fas fa-undo"></i> Reset
                        </button>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-filter"></i> Filter
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">

            <!-- ADDED: Button container with flex for better alignment -->
            <div class="d-flex flex-wrap gap-2 mb-3 align-items-center">
                <div id="datatable-buttons"></div>
                <!-- Moved DataTables buttons here -->
                <button id="arrangeAlphabeticallyButton" class="btn btn-success">
                    <i class="fas fa-sort-alpha-down"></i> Arrange Alphabetically
                </button>
            </div>
            <!-- END ADDED -->
            <!-- Toast Message -->
            <div id="toast" class="toast-message">✔ Records arranged alphabetically!</div>

            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered" id="masterTable">
                    <thead class="table-primary">
                        <tr>
                            <th class="text-center">No. </th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Middle Name</th>
                            <th>Category</th>
                            <th>Location Code</th>
                            <th>Position</th>
                            <th>School</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center"></td> <!-- Empty cell will be populated by DataTables -->
                                <td>@item.FirstName</td>
                                <td>@item.LastName</td>
                                <td>@item.MiddleName</td>
                                <td>
                                    <span class="badge
                                        @(item.Category == "ELEM" ? "bg-primary" :
                                          item.Category == "SEC" ? "bg-success" :
                                          item.Category == "SHS" ? "bg-info" : "bg-secondary")">
                                        @item.Category
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-dark">@item.LocationCode</span>
                                </td>
                                <td>@item.Position</td>
                                <td>
                                    @if (string.IsNullOrWhiteSpace(item.School))
                                    {
                                        <span class="text-muted">Not specified</span>
                                    }
                                    else
                                    {
                                        @item.School
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info" title="Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.bootstrap5.min.css" />
    <style>
        .table-responsive {
            overflow-x: auto;
        }

        .table thead th {
            white-space: nowrap;
            vertical-align: middle;
            font-weight: 600;
            background-color: #4a6baf !important;
            color: white;
        }

        .table tbody td {
            vertical-align: middle;
        }

        .btn-group-sm > .btn {
            padding: 0.25rem 0.5rem;
            font-size: 0.875rem;
        }

        .badge {
            font-size: 0.85em;
            font-weight: 500;
            padding: 0.35em 0.65em;
        }

        .card {
            border: none;
            border-radius: 0.5rem;
        }

        /* Adjusted gap between DataTables buttons */
        .dt-buttons .btn {
            margin-right: 5px;
        }

        /* Toast styling */
        .toast-message {
            visibility: hidden;
            min-width: 250px;
            background-color: #198754;
            color: white;
            text-align: center;
            border-radius: 8px;
            padding: 12px;
            position: fixed;
            z-index: 9999;
            right: 20px;
            top: 20px;
            font-size: 1rem;
            transition: visibility 0s, opacity 0.5s ease-in-out;
            opacity: 0;
        }

            .toast-message.show {
                visibility: visible;
                opacity: 1;
            }

        /* ADDED: Fix layout shifting when paging */
        #masterTable_wrapper .dataTables_scrollBody {
            max-height: 70vh; /* you can change to 600px if you want fixed */
            overflow-y: auto;
        }
        /* END ADDED */
    </style>
}

@section Scripts {
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.bootstrap5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.print.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.colVis.min.js"></script>

    <script>
           $(document).ready(function() {
            var table = $('#masterTable').DataTable({
                dom: '<"top"Bf>rt<"bottom"lip><"clear">',
                buttons: [
                    {
                        extend: 'copy',
                        className: 'btn btn-secondary',
                        text: '<i class="fas fa-copy"></i> Copy',
                        exportOptions: {
                            columns: ':visible:not(:last-child)'
                        }
                    },
                    {
                        extend: 'excel',
                        className: 'btn btn-success',
                        text: '<i class="fas fa-file-excel"></i> Excel',
                        title: 'Master List Export',
                        exportOptions: {
                            columns: ':visible:not(:last-child)'
                        }
                    },
                    {
                        extend: 'pdf',
                        className: 'btn btn-danger',
                        text: '<i class="fas fa-file-pdf"></i> PDF',
                        title: 'Master List Export',
                        exportOptions: {
                            columns: ':visible:not(:last-child)'
                        }
                    },
                    {
                        extend: 'print',
                        className: 'btn btn-info',
                        text: '<i class="fas fa-print"></i> Print',
                        title: 'Master List',
                        exportOptions: {
                            columns: ':visible:not(:last-child)'
                        }
                    },
                    {
                        extend: 'colvis',
                        className: 'btn btn-warning',
                        text: '<i class="fas fa-eye"></i> Columns'
                    }
                ],
                responsive: true,
                pageLength: 25,
                order: [[1, 'asc']], // Default sort by First Name (column index 1)
                columnDefs: [
                    {
                        orderable: false,
                        targets: [0, 8] // Make # and Actions columns not sortable
                    },
                    {
                        className: 'dt-center',
                        targets: [0] // Center align the # column
                    },
                    {
                        render: function (data, type, row, meta) {
                            if (type === 'display') {
                                return meta.row + 1 + meta.settings._iDisplayStart;
                            }
                            return data;
                        },
                        targets: 0
                    }
                ],
                drawCallback: function() {
                    var api = this.api();
                    api.column(0, { search: 'applied', order: 'applied' }).nodes().each(function(cell, i) {
                        cell.innerHTML = i + 1;
                    });
                }
            });

            // Move buttons inside our flex container
            table.buttons().container().appendTo('#datatable-buttons'); // ADDED

            // Alphabetical sort button
            $('#arrangeAlphabeticallyButton').click(function() {
                table.order([1, 'asc']).draw(); // Sort by First Name (column index 1)
                showToast("Records sorted alphabetically by first name!");
            });

            function showToast(message) {
                var toast = $('#toast');
                toast.text(message).addClass('show');
                setTimeout(function() {
                    toast.removeClass('show');
                }, 3000);
            }

            $('#filterForm').on('submit', function(e) {
                e.preventDefault();
                applyFilters();
            });

            $('#resetFilters').on('click', function() {
                $('#categoryFilter').val('');
                $('#locationFilter').val('');
                $('#positionFilter').val('');
                applyFilters();
            });

            function applyFilters() {
                table.column(4).search($('#categoryFilter').val());
                table.column(5).search($('#locationFilter').val());
                table.column(6).search($('#positionFilter').val());
                table.draw();
            }
        });
    </script>
}
