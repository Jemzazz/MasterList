@model MasterList.Models.MList

<dt class="col-sm-3 fw-bold text-muted">ID</dt>
<dd class="col-sm-9">@Model.Id</dd>

<dt class="col-sm-3 fw-bold text-muted">First Name</dt>
<dd class="col-sm-9">@Model.FirstName</dd>

<dt class="col-sm-3 fw-bold text-muted">Last Name</dt>
<dd class="col-sm-9">@Model.LastName</dd>

<dt class="col-sm-3 fw-bold text-muted">Middle Name</dt>
<dd class="col-sm-9">@Model.MiddleName</dd>

<dt class="col-sm-3 fw-bold text-muted">Category</dt>
<dd class="col-sm-9">
    <span class="badge @GetCategoryBadgeClass(Model.Category)">
        @Model.Category
    </span>
</dd>

<dt class="col-sm-3 fw-bold text-muted">Location Code</dt>
<dd class="col-sm-9">@Model.LocationCode</dd>

<dt class="col-sm-3 fw-bold text-muted">Position</dt>
<dd class="col-sm-9">@Model.Position</dd>

<dt class="col-sm-3 fw-bold text-muted">School</dt>
<dd class="col-sm-9">
    @if (string.IsNullOrEmpty(Model.School))
    {
        <span class="text-muted">Not specified</span>
    }
    else
    {
        <span class="badge bg-success">@Model.School</span>
    }
</dd>

@functions {
    string GetCategoryBadgeClass(string category)
    {
        return category switch
        {
            "ALS MOBILE TEACHER" => "bg-primary",
            "ELEM" => "bg-success",
            "SEC" => "bg-info",
            "SHS" => "bg-warning",
            _ => "bg-secondary"
        };
    }
}
